<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="com.jitlogic.zico.widgets.client.WidgetResources"/>
    <ui:style>
        .caption {
            display: inline-block;
        }
        .icon {
            display: inline-block;
            margin-left: 4px;
            cursor: pointer;
            opacity: 0.7;
        }
        .icon:hover {
            opacity: 1;
        }
    </ui:style>
    <g:HTMLPanel>
        <g:Label ui:field="lblCaption" styleName="{style.caption}">...</g:Label>
        <g:Image ui:field="imgClose" styleName="{style.icon}" resource="{res.tabClose}"/>
    </g:HTMLPanel>
</ui:UiBinder>

